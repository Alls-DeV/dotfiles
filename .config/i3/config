# colors
set $white  #EEE8D5
set $black  #00141A
set $grey   #586E75
set $red    #DC322F
set $blue   #29EEDF

# Basic settings
font pango:JetBrains Mono Nerd Font Propo 11
set $mod Mod4
set $alt Mod1
workspace_layout default
bindsym $mod+Shift+s layout toggle tabbed split
new_window pixel 2
hide_edge_borders smart
floating_modifier $mod

# Workspace
set $ws1 "1<b>1</b>"
set $ws2 "2<b>2</b>"
set $ws3 "3<b>3</b>"
set $ws4 "4<b>4</b>"
set $ws5 "5<b>5</b>"
set $ws6 "6<b>6</b>"
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Window focus, movement and management
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+q kill
bindsym $mod+Shift+r reload
bindsym $mod+o split toggle
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f floating toggle ; [floating] resize set 1200 800 ; move position center

# Audio control
bindsym XF86AudioRaiseVolume exec amixer -q set Master 1%+ unmute && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q set Master 1%- unmute && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec --no-startup-id amixer sset Master toggle && killall -USR1 i3blocks

# Brightness control
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# Application shortcuts
bindsym $mod+Return exec alacritty
bindsym $mod+w exec google-chrome-stable
bindsym $mod+n exec nemo
bindsym $mod+a exec pavucontrol
bindsym $mod+p exec QT_ENABLE_HIGHDPI_SCALING=0 flameshot gui
bindsym $mod+c exec code
bindsym $mod+d exec dmenu_run -i -fn "JetBrains Mono Nerd Font-15" -nb "$black" -nf "$grey" -sb "$black" -sf "$blue" -l 10
bindsym $mod+b exec blueman-manager

# Python as calculator
bindsym $mod+s exec alacritty --class ciao -e /usr/bin/python3
for_window [instance="ciao"] floating enable, [floating] resize set 1200 800 , move position center

# Resizing windows
bindsym $mod+$alt+l resize grow width 5 px or 5 ppt
bindsym $mod+$alt+k resize grow height 5 px or 5 ppt
bindsym $mod+$alt+h resize shrink width 5 px or 5 ppt
bindsym $mod+$alt+j resize shrink height 5 px or 5 ppt

# Power menu
bindsym $mod+Escape exec ~/scripts/power.sh


# Border color settings
#                       border_bar   back     text     direction   border_win
client.focused          $blue        $blue    $black   $red        $blue
client.focused_inactive $black       $black   $blue    $black      $black
client.unfocused        $black       $black   $grey    $black      $black

# Bar Configuration
bar {
    status_command i3status -c ~/.config/i3/i3status.conf
    strip_workspace_numbers yes
    position top
    colors {
        background $black
        statusline $white
        #                  border   background  text
        focused_workspace  $black   $black      $blue
        inactive_workspace $black   $black      $grey
        active_workspace   $black   $black      $grey
        urgent_workspace   $red     $red        $black
        binding_mode       $black   $black      $red
    }
}

exec --no-startup-id setxkbmap -option caps:escape
exec --no-startup-id /home/alls/scripts/random_wallpaper.sh
